<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <RelativeLayout
        android:id="@+id/layout_toverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="25dp">

        <ImageView
            android:id="@+id/img_toverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/to_verify" />
        <TextView
            android:id="@+id/txt_toverify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="1"
            android:layout_marginLeft="170dp"
            android:textSize="16sp"
            android:background="@drawable/count_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_toverify"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="待审核"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/division_shape" />

    <RelativeLayout
        android:id="@+id/layout_toreply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="25dp">

        <ImageView
            android:id="@+id/img_toreply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/to_reply" />
        <TextView
            android:id="@+id/txt_toreply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="12"
            android:layout_marginLeft="170dp"
            android:textSize="16sp"
            android:background="@drawable/count_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_toreply"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="待回复"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/division_shape" />

    <RelativeLayout
        android:id="@+id/layout_verifycomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="25dp">

        <ImageView
            android:id="@+id/img_verifycomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/verify_comment" />
        <TextView
            android:id="@+id/txt_verifycomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:gravity="center"
            android:text="123456"
            android:layout_marginLeft="170dp"
            android:textSize="16sp"
            android:background="@drawable/count_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_verifycomment"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="待审核评论"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/division_shape" />
</LinearLayout>
