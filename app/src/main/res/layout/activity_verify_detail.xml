<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="29日的67路早上7:20左右行驶到龙山路上时一位盲人乘客，师傅提示让座，等他坐稳后再启动车辆。"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.ql1d.view.MyGridView
                android:id="@+id/grid_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="8dp"
                android:clickable="false"
                android:focusable="false"
                android:numColumns="3" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/info_bg"
                android:drawableLeft="@mipmap/icon_address"
                android:padding="15dp"
                android:text="济南市历下区诚基中心5号楼"
                android:textColor="@color/item_time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/info_bg"
                android:drawableLeft="@mipmap/icon_user"
                android:padding="15dp"
                android:text="王先生"
                android:textColor="@color/item_time"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/info_bg"
                android:orientation="horizontal"
                android:padding="14dp">

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/icon_phone"
                    android:text="13506417964"
                    android:textColor="@color/item_time"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_dial"
                    android:layout_width="40dp"
                    android:layout_height="22dp"
                    android:background="@drawable/btn_dial_selector"
                    android:text="拨打"
                    android:textColor="@color/red"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_reject_selector"
                    android:drawableLeft="@mipmap/btn_reject_left"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="否决"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_agree"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_agree_selector"
                    android:drawableLeft="@mipmap/btn_agree_left"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="通过"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
